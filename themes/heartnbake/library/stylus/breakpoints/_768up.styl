/******************************************************************

Stylesheet: 768px and Up Stylesheet

******************************************************************/
.nav-toggle,
.top-menu,
.logo.top-menu
	display none!important
.poster
	z-index 0
	height 80%
	max-height 100%
	.cover
		.cover-image
			&.mobile
				display none
			&.desktop
				display block
		.preview-content
			.info
				font-size 100%
				bottom 50px
.grid-container
	.heart-item
		min-height 218px
		img
			width 72%
			margin 14% auto
		&:hover,
		&:focus
			img
				width 76%
				margin 12% auto
.header
	width 100%
	clear both
	height 200px
	overflow hidden
	&.fixed
		z-index 2
		width 100%
		background bg-color
		background rgba(bg-color,0.9)
		display block
		top 0
		&.inner-header-wrapper
			height 50px!important
		.inner-header
			nav
				line-height 50px!important
			.logo
				display block
				height 100%
				img
					height 100%
					max-height 68%
					margin-top 2%
	.inner-header
		height 100%
		clear both
		width 100%
		max-width max-width
		margin 0 auto
		display block
		nav,
		.logo
			column(4)
		.logo
			display block
			height 100%
			img
				display block
				margin 0 auto
				height 100%
				max-height 50%
				margin-top 14%
				//width 100%
		nav
			height 100%
			font-family sans-serif-reg
			line-height 200px
			.menu-send
				display none
			&.main-nav-right
				li
					float left
					margin-right .4em
			&.main-nav-left
				li
					float right
					margin-left .4em
			li
				display block
				a
					text-decoration none
					text-transform uppercase
					padding 4px
					color blue
.page-template-page-products-php
	.sorting div
		column(2)
		overflow visible
		a
			width 90%
.page-template-default,
.page-template-page-products-php
	article
		.page-title
			display none
.page-template-page-gift-php
	padding-top 0
	.heart-box-wrapper
		#heart-box ul li:hover
			.info
				opacity 1
				transform scale(1.0)

.page-template-page-heartgreeting-php,
.page-template-page-gift-php
	padding-top 0
	.slinky-nav
		position relative
		section#start
			.heart-box-wrapper
				height 450px
		section#heartbox
			box-shadow(inset 0 -20px 20px -20px rgba(black,0.7))
			.heart-box-wrapper
				position relative
				background none
				top -335px
				height 0
				overflow visible
				background linear-gradient(top, rgba(white,1), rgba(white,0))
				background-size 1px 200%
				background-position 0 200%
				background-repeat repeat-x
				#heart-box
					transition width .3s ease-in-out
				&.fixed
					position fixed
					top 0
					height 200px
					padding-top 40px
				&.gradient
					background-size 1px 100%
					background-position 0 0
		section#end
			position relative
			background bg-color
			z-index 999
			//padding-bottom 200px

//Elements
blockquote
	font-size 130%