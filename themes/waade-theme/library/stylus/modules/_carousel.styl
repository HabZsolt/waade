@import '_royalslider.styl'

#heart-gallery
  width 100%
  opacity 0

.visibleNearby
  width 100%
  background none
  padding-top 25px
  .rsGCaption
    font-size 1.5em
    line-height 1.5
    padding 12px 0 16px
    background none
    width 100%
    position static
    float left
    left auto
    bottom auto
    text-align center
    font-family sans-serif-reg
    color bread
    span
      display block
      clear both
      color lighten(bread,30%)
      max-width 320px
      margin 0 auto
      font-size 70%
      line-height 1.15
      font-family sans-serif-light

  /* Scaling transforms */
  .rsSlide img
    opacity 0.45
    transition all 0.3s ease-out
    transform scale(0.9)

  .rsActiveSlide img
    opacity 1
    transform scale(1)
